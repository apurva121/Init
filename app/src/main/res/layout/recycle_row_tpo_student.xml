<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardTpoStudent"
        android:layout_width="match_parent"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_height="130dp"
        class="android.support.v7.widget.CardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:id="@+id/cardTpoStudentImage"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Shivani Gupta"
                android:id="@+id/cardTpoStudentName"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/cardTpoStudentImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="10"
                android:paddingRight="10dp"
                android:id="@+id/cardTpoStudentCredits"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20155114"
                android:id="@+id/cardTpoStudentReg"
                android:layout_below="@+id/cardTpoStudentName"
                android:layout_toRightOf="@+id/cardTpoStudentImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.tech. ECE"
                android:id="@+id/cardTpoStudentCourse"
                android:layout_below="@+id/cardTpoStudentReg"
                android:layout_toRightOf="@+id/cardTpoStudentImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8765496418"
                android:id="@+id/cardTpoStudentPhone"
                android:layout_below="@+id/cardTpoStudentCourse"
                android:layout_toRightOf="@+id/cardTpoStudentImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shivani.ashi@gmail.com"
                android:id="@+id/cardTpoStudentEmail"
                android:layout_below="@+id/cardTpoStudentPhone"
                android:layout_toRightOf="@+id/cardTpoStudentImage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placed at Morgan Stanley ()"
                android:id="@+id/cardTpoStudentPlaced"
                android:layout_below="@+id/cardTpoStudentEmail"
                android:layout_toRightOf="@+id/cardTpoStudentImage" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>